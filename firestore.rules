rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Notifications collection - authenticated users only
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
    
    // Appointments collection - authenticated users only
    match /appointments/{appointmentId} {
      allow read, write: if request.auth != null;
    }
    
    // Services collection - authenticated users only
    match /services/{serviceId} {
      allow read, write: if request.auth != null;
    }
    
    // Customers collection - authenticated users only
    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }
    
    // Settings collection - authenticated users only
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // Employees collection - authenticated users only
    match /employees/{employeeId} {
      allow read, write: if request.auth != null;
    }
    
    // Google Tokens collection - authenticated users only
    match /googleTokens/{tokenId} {
      allow read, write: if request.auth != null && request.auth.uid == tokenId;
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
